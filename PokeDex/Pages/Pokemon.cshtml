@page "{id}"
@model PokeDex.Pages.PokemonModel
@{
}

<style>
	#info .info__main {
		padding: 3rem;
		display: flex;
		flex-direction: column;
		place-items: center;
	}

	#info .info__name {
		font-family: 'Lato';
		font-size: 3rem;
		font-weight: 500;
		text-transform: uppercase;
	}

	#info p {
		font-family: 'Lato';
		font-size: 2rem;
		font-weight: 400;
		margin-top: 2.5rem;
	}

	#info .info__list {
		margin: 2em;
		display: flex;
		gap: 1.5rem;
	}

	#info .info__type {
		font-family: 'Lato';
		font-size: 1.5rem;
		font-weight: 300;
		text-transform: capitalize;
	}

	#info .info__img {
		background-color: gray;
		color: white;
		border-radius: 1rem;
		box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
	}
</style>

<div id="info">
 <div class="info__main">
  <h2 class="info__name">@Model.PokeName</h2>
  <p>Types</p>
  <ul class="info__list">
			@foreach (var type in Model.PokeTypes)
			{
	   <li class="info__type">@type</li>
			}
  </ul>
  <img class="info__img" src="@Model.ImgUrl" alt="pokemon" height="200" widht="200"/>
 </div>
</div>
